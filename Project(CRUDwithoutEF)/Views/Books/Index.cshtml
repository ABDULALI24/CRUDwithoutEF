@model System.Data.DataTable

@{
    ViewData["Title"] = "List of Books";
}


<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<div >
    <a asp-action="AddOrEdit" class="btn btn-success">Add a New Book +</a>
</div>
<br />
<table class="table table-bordered table-hover">
    <thead style="background-color:antiquewhite">
        <tr>
            <th>
               Title
            </th>
            <th>
               Author
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@for (int i = 0; i < Model.Rows.Count; i++) {
        <tr>
            <td>
                @Model.Rows[i]["Title"]
            </td>
            <td>
                    @Model.Rows[i]["Author"]
            </td>
            <td>
                    @Model.Rows[i]["Price"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id=@Model.Rows[i]["BookID"] class="btn btn-info" >Edit</a> |
               
                <a asp-action="Delete" asp-route-id=@Model.Rows[i]["BookID"] class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
